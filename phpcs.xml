<?xml version="1.0"?>
<ruleset name="Link Wizard for WooCommerce">
	<description>WordPress Coding Standards for Link Wizard for WooCommerce plugin</description>
	
	<!-- What to scan -->
	<file>.</file>
	
	<!-- Exclude common non-PHP files -->
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/.git/</exclude-pattern>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/*.min.js</exclude-pattern>
	<exclude-pattern>/*.min.css</exclude-pattern>
	<exclude-pattern>/admin/build/</exclude-pattern>
	
	<!-- How to scan -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg value="np"/>
	
	<!-- Rules: Basic PHP checks that work -->
	<rule ref="Generic"/>
	<rule ref="Squiz"/>
	<rule ref="Zend"/>
</ruleset>
